@{
    Layout = null;
}
@model OnlineFood.Application.Features.Customers.Commands.Requests.CreateCustomerCommand
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>صفحه ثبت نام</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminTemplate/dist/css/adminlte.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/wwwroot/AdminTemplate/plugins/iCheck/square/blue.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <!-- bootstrap rtl -->
    <link rel="stylesheet" href="~/AdminTemplate/dist/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" href="~/AdminTemplate/dist/css/custom-style.css">
</head>
<body class="hold-transition login-page">
    <div class="card card-warning col-md-12">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <div class="card-header">
            <h3 class="card-title">لطفا فرم زیر را تکمیل کنید</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form role="form" method="post" asp-controller="Register" asp-action="Create">
                <!-- text input -->
                <div class="form-group">
                    <label>نام</label>
                    <input type="text" class="form-control" id="FirstName" name="FirstName" asp-for="FirstName" placeholder="نام را وارد کنید ..." required="required" autocomplete="on" oninvalid="setCustomValidity('نام اجباری است')" onkeyup="setCustomValidity('')">
                </div>
                <div class="form-group">
                    <label>نام خانوادگی</label>
                    <input type="text" class="form-control" id="LastName" name="LastName" asp-for="LastName" placeholder="نام خانوادگی را وارد کنید ..." required="required" autocomplete="on" oninvalid="setCustomValidity('نام خانوادگی اجباری است')" onkeyup="setCustomValidity('')">
                </div>
                <div class="form-group">
                    <label>پست الکترونیک</label>
                    <input type="text" class="form-control" id="Email" name="Email" asp-for="Email" placeholder="پست الکترونیک را وارد کنید ..." autocomplete="on" onkeyup="setCustomValidity('')">
                </div>
                <div class="form-group">
                    <label>تلفن همراه</label>
                    <input type="text" class="form-control" id="MobileNumber" name="MobileNumber" asp-for="MobileNumber" placeholder="تلفن همراه را وارد کنید ..." required="required" autocomplete="on" oninvalid="setCustomValidity('تلفن همراه اجباری است')" onkeyup="setCustomValidity('')">
                </div>
                <div class="form-group">
                    <label>تلفن ثابت</label>
                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" placeholder="تلفن ثابت را وارد کنید ..." autocomplete="on" onkeyup="setCustomValidity('')">
                </div>
                <!-- radio -->
                <div class="form-group">
                    <label>جنسیت</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="option1">
                        <label class="form-check-label">مرد</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" value="option1">
                        <label class="form-check-label">زن</label>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">ثبت نام</button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- jQuery -->
    <script src="/AdminTemplate/plugins/jquery/jquery.min.js"></script>
    <script src="/AdminTemplate/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/AdminTemplate/plugins/iCheck/icheck.min.js"></script>

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            })
        })
    </script>
</body>
</html>